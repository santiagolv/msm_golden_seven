<div class="page-header">
  <h1>Add Actor</h1>
</div>

<form class="form-horizontal" action="/create_actor">
  <!-- Label and input for dob -->
  <div class="form-group">
    <label for="dob" class="col-sm-2 control-label">
      Dob
    </label>
    <div class="col-sm-10">
      <input type="text" id="dob" name="dob" placeholder="Dob" class="form-control">
    </div>
  </div>

  <!-- Label and input for Name -->
  <div class="form-group">
    <label for="name" class="col-sm-2 control-label">
      Name
    </label>
    <div class="col-sm-10">
      <input type="text" id="name" name="name" placeholder="Name" class="form-control">
    </div>
  </div>

  <!-- Label and input for duration -->
  <div class="form-group">
    <label for="bio" class="col-sm-2 control-label">
      Bio
    </label>
    <div class="col-sm-10">
      <input type="text" id="bio" name="bio" placeholder="Bio" class="form-control">
    </div>
  </div>

  <!-- Label and input for image_url -->
  <div class="form-group">
    <label for="image_url" class="col-sm-2 control-label">
      Image url
    </label>
    <div class="col-sm-10">
      <input type="text" id="image_url" name="image_url" placeholder="Image url" class="form-control">
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <input type="submit" value="Create Actor" class="btn btn-primary">
    </div>
  </div>
</form>
